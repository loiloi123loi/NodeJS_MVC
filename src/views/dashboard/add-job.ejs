<link rel="stylesheet" href="../assets/css/dashboard-form-page.css" />
<% 
  const jobStatusOptions = ['pending', 'interview', 'declined'];
  const jobTypeOptions = ['full-time', 'part-time', 'internship'];
%>
<section class="form-group">
  <form class="form" action="/" method="post">
    <h4 class="form-title">add job</h4>
    <div class="form-center">
      <%- include('../partials/form-row.ejs', {type: 'text', name: 'position', required: true}) %>
      <%- include('../partials/form-row.ejs', {type: 'text', name: 'company', required: true}) %>
      <%- include('../partials/form-row.ejs', {type: 'text', name: 'jobLocation', labelText: 'job location', required: true}) %>
      <%- include('../partials/form-row-select.ejs', {name: 'status', labelText: 'job status', list: jobStatusOptions}) %>
      <%- include('../partials/form-row-select.ejs', {name: 'jobType', labelText: 'job type', list: jobTypeOptions}) %>
      <button type="submit" class="btn btn-block submit-btn">
        submit
      </button>
    </div>
  </form>
</section>